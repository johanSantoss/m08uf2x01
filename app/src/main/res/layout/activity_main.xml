<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btnEjer3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ejer3"
                app:layout_constraintEnd_toEndOf="@+id/btnEjer2"
                app:layout_constraintStart_toStartOf="@+id/btnEjer2"
                app:layout_constraintTop_toBottomOf="@+id/btnEjer2" />

            <Button
                android:id="@+id/btnEjer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ejer2"
                app:layout_constraintEnd_toEndOf="@+id/btnEjer1"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="@+id/btnEjer1"
                app:layout_constraintTop_toBottomOf="@+id/btnEjer1" />

            <Button
                android:id="@+id/btnEjer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ejer1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnEjer4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ejer4"
                app:layout_constraintEnd_toEndOf="@+id/btnEjer3"
                app:layout_constraintStart_toStartOf="@+id/btnEjer3"
                app:layout_constraintTop_toBottomOf="@+id/btnEjer3" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button"
                app:layout_constraintEnd_toEndOf="@+id/btnEjer4"
                app:layout_constraintStart_toStartOf="@+id/btnEjer4"
                app:layout_constraintTop_toBottomOf="@+id/btnEjer4" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button"
                app:layout_constraintEnd_toEndOf="@+id/button5"
                app:layout_constraintStart_toStartOf="@+id/button5"
                app:layout_constraintTop_toBottomOf="@+id/button5" />

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button"
                app:layout_constraintEnd_toEndOf="@+id/button6"
                app:layout_constraintStart_toStartOf="@+id/button6"
                app:layout_constraintTop_toBottomOf="@+id/button6" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>