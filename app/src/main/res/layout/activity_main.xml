<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btnPressure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Ejer3 - Altres Sensors"
                android:textAlignment="viewStart"
                app:layout_constraintEnd_toEndOf="@+id/btnLight"
                app:layout_constraintStart_toStartOf="@+id/btnLight"
                app:layout_constraintTop_toBottomOf="@+id/btnLight" />

            <Button
                android:id="@+id/btnLight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Ejer2 - Acelerometre/Geometre"
                android:textAlignment="viewStart"
                app:layout_constraintEnd_toEndOf="@+id/btnProximity"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="@+id/btnProximity"
                app:layout_constraintTop_toBottomOf="@+id/btnProximity" />

            <Button
                android:id="@+id/btnProximity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Ejer1 - Llistat Sensors"
                android:textAlignment="viewStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnEjer4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Ejer4 - Canvas BOLITA"
                android:textAlignment="viewStart"
                app:layout_constraintEnd_toEndOf="@+id/btnPressure"
                app:layout_constraintStart_toStartOf="@+id/btnPressure"
                app:layout_constraintTop_toBottomOf="@+id/btnPressure" />

            <Button
                android:id="@+id/btnEjer5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ejer5 - Control de Audio"
                android:textAlignment="viewStart"
                app:layout_constraintEnd_toEndOf="@+id/btnEjer4"
                app:layout_constraintStart_toStartOf="@+id/btnEjer4"
                app:layout_constraintTop_toBottomOf="@+id/btnEjer4" />

            <Button
                android:id="@+id/btnEjer6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ejer6 - Uso de Camara"
                android:textAlignment="viewStart"
                app:layout_constraintEnd_toEndOf="@+id/btnEjer5"
                app:layout_constraintStart_toStartOf="@+id/btnEjer5"
                app:layout_constraintTop_toBottomOf="@+id/btnEjer5" />

            <Button
                android:id="@+id/btnEjer7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ejer7 - MAPA (codelap)"
                android:textAlignment="viewStart"
                app:layout_constraintEnd_toEndOf="@+id/btnEjer6"
                app:layout_constraintStart_toStartOf="@+id/btnEjer6"
                app:layout_constraintTop_toBottomOf="@+id/btnEjer6" />

            <Button
                android:id="@+id/btnEjer8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ejer8 - Enviar Mail"
                android:textAlignment="viewStart"
                app:layout_constraintEnd_toEndOf="@+id/btnEjer7"
                app:layout_constraintStart_toStartOf="@+id/btnEjer7"
                app:layout_constraintTop_toBottomOf="@+id/btnEjer7" />

            <Button
                android:id="@+id/btnEjer9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ejer9 - Abrir Google Maps (diferentes formas)"
                android:textAlignment="viewStart"
                app:layout_constraintEnd_toEndOf="@+id/btnEjer8"
                app:layout_constraintStart_toStartOf="@+id/btnEjer8"
                app:layout_constraintTop_toBottomOf="@+id/btnEjer8" />

            <Button
                android:id="@+id/btnEjer10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="continuarÃ¡"
                app:layout_constraintEnd_toEndOf="@+id/btnEjer9"
                app:layout_constraintStart_toStartOf="@+id/btnEjer9"
                app:layout_constraintTop_toBottomOf="@+id/btnEjer9"
                android:textAlignment="viewStart" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>