<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ex3.Ejercicio3Activity">


    <Button
        android:id="@+id/btnLight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Light"
        app:layout_constraintEnd_toEndOf="@+id/btnProximity"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/btnProximity"
        app:layout_constraintTop_toBottomOf="@+id/btnProximity" />

    <Button
        android:id="@+id/btnProximity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Proximity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnTemperature"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Temperature"
        app:layout_constraintEnd_toEndOf="@+id/btnLight"
        app:layout_constraintStart_toStartOf="@+id/btnLight"
        app:layout_constraintTop_toBottomOf="@+id/btnLight" />

    <Button
        android:id="@+id/btnAbiemtTemperature"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ambient_Temperature"
        app:layout_constraintEnd_toEndOf="@+id/btnTemperature"
        app:layout_constraintStart_toStartOf="@+id/btnTemperature"
        app:layout_constraintTop_toBottomOf="@+id/btnTemperature" />

</androidx.constraintlayout.widget.ConstraintLayout>